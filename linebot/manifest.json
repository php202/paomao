{
  "manifest_version": 3,
  "name": "LINE Bot 客服小幫手",
  "version": "2.1",
  "permissions": [
    "sidePanel",
    "tabs",
    "storage" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "開啟客服小幫手"
    // 注意：這裡移除了 "default_popup"，改由 background.js 控制開啟側邊欄
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
